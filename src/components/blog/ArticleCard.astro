---
export interface Props {
	title: string;
	content: string;
  slug: string;
  date: string;
}

const { title, content, slug, date } = Astro.props;
---

<div class="w-full md:w-1/2 lg:w-1/3 px-4">
  <div class="pb-8 md:pb-12 mb-8 md:mb-12 border-b border-gray-100">
    <h2 class="mb-2 text-2xl font-semibold font-heading">{title}</h2>
    <span class="text-xs font-semibold text-gray-200">{date}</span>
    <p class="my-2 text-base leading-loose text-gray-50">{content}</p>
    <a class="text-sm uppercase font-bold hover:underline text-indigo-200" href={`/blog/${slug}`}>
      <span>Leer art√≠culo</span>
      <span class="inline-block ml-2">
        <svg class="text-blue-500 h-3 w-3" viewBox="0 0 8 12" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M1.875 0L0 1.875L4.125 6L0 10.125L1.875 12L7.875 6L1.875 0Z"></path>
        </svg>
      </span>
    </a>
  </div>
</div>
