---
export interface Props {
	title: string;
	description: string;
	svgPath: string;
  isFinalRow?: boolean;
}

const { title, description, svgPath, isFinalRow } = Astro.props;
const cardClasses = !isFinalRow ? "w-full md:w-1/2 lg:w-1/3 px-4 mb-12 lg:mb-20" : "w-full md:w-1/2 lg:w-1/3 px-4 mb-12 lg:mb-0"
---


<div class={cardClasses}>
  <div class="flex">
    <span class="flex-shrink-0 mr-8">
      <svg class="text-blue-500 h-10 w-10" viewBox="0 0 38 38" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path d={svgPath}></path>
      </svg>
    </span>
    <div>
      <h3 class="mb-4 text-lg font-bold uppercase font-heading text-blue-800">{title}</h3>
      <p class="text-base text-gray-500 leading-loose">{description}</p>
    </div>
  </div>
</div>
