---
export interface Props {
	siteTitle: string;
	greeting: string;
	imageUrl: string;
}

const { siteTitle, greeting, imageUrl } = Astro.props;
---


<div class="relative pt-12 md:pt-0">
  <div class="container px-4 mx-auto">
    <div class="relative flex flex-wrap items-center -mx-4">
      <div class="relative z-10 w-full md:w-1/2 px-4 lg:py-32 mb-6 md:mb-0">
        <div class="flex flex-wrap lg:flex-nowrap">
          <div class="mb-6 lg:mb-0 lg:mt-32 lg:-mr-10">
            <p class="lg:transform lg:rotate-90 tracking-widest text-lg text-white uppercase">  </p>
          </div>
          <div>
            <p class="tracking-widest text-lg text-indigo-200 uppercase mb-2">WHO I AM</p>
            <h2 class="mb-8 text-4xl lg:text-5xl text-white font-bold">{greeting}</h2>
            <!-- <a class="inline-block w-full md:w-auto mb-2 md:mb-0 py-5 px-8 mr-6 text-center text-sm font-bold uppercase bg-yellow-500 hover:bg-yellow-400 transition duration-200" href="#">Get estimate</a><a class="inline-block w-full md:w-auto py-5 px-8 text-center text-sm text-white font-bold uppercase border border-white hover:border-gray-50 transition duration-200" href="#">CONTACT</a> -->
          </div>
        </div>
      </div>
      <div class="hidden md:block absolute top-0 right-0 w-full md:w-1/2 mr-10 px-4">
        <img 
        class="w-80 h-80 rounded-full mx-auto mt-30" 
        src={imageUrl}
        alt="Page Carbajal - Software Engineer" />
      </div>
    </div>
  </div>
</div>
